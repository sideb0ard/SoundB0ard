let jblah_gen = gen()
{
  setup()
  {
    let d = 10000;
    let rklen = 1;
  }
  run()
  {
    if (count % 8 == 0) {
      let b = rand_beat();
      for (i = 0; i < 16; ++i) {
        if (b[i] == 1) {
          note_on_at(jdy, 1, i * pp, dur = d);
        }
      }
      d = d + 1000;
      if (d > 50000) {
        d = 100;
      }
    }
    if (count % 8 == 7) {
      set rkk:stutter 1;
    }
    if (count % 8 == 6) {
      set rks:reverse 1;
    }
    if (count % 3 == 0) {
      set rks:len 1 + rklen;
      rklen = 1 - rklen;
    }

    if (count % 8 == 5) {
      set intr:vol 0;
      mashup([rkk, intr, rks]);
    }
    if (count % 12 == 11) {
      set intr:vol 0.7;
      solo(intr, at=8*pp);
    }
  }
}
