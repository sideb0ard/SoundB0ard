let bassblah_gen = gen()
{
  setup()
  {
    let mel1 = [30, 0, 0, 32, 0, 0, 32, 0, 0, 40, 0, 40, 41, 0, 30, 0];
    let mel2 = [40, 0, 0, 33, 0, 40, 0, 41, 0, 0, 32, 0, 40, 0, 30, 0];
    let melz = [mel1, mel2];
    let mx = 0;

    let midx = 0;
    let midxmax = 3;

    let dr = 200;
  }
  run()
  {
    if (count % 3 == 0) {
      mx = incr(mx, 0, len(melz));
    }
    if (count % 4 < 2) {
      let mel = melz[mx];
      for (i = 0; i < 16; ++i) {
        if (mel[i] > 0) {
          note_on_at(mo, mel[i], i * pp, dur = dr);
        }
      }
    }
    if (count % 4 == 3) {
      let mel = melz[mx];
      for (i = 0; i < 16; ++i) {
        stepper(per2, mel, midx, i, dr);
        midx = incr(midx, 0, midxmax);
      }
      midxmax = incr(midxmax, 3, 16);
    }
    dr = dr + 50;
    if (dr > 400) {
      dr = 100;
    }
  }
}

# dx = wuurpr
let dxblah_gen = gen()
{
  setup()
  {
    let ocz = [ 4, 16];
    let ox = 0;
    let dxmel = gamelody(16, ocz[ox]);
    let sx = 0;
    let smx = 3;
    let dr = 100;
  }
  run()
  {

    if (count % 8 < 6) {
      for (i = 0; i < 16; ++i) {
        if (dxmel[i] > 0) {
          let v = 80 + rand(47);
          if (i % 8 == 0) {
            v = 127;
          }
          note_on_at(dx, dxmel[i], i*pp, vel = v, dur = dr);
        }
      }
    }
    if (count % 12 == 0) {
      let dxmel = gamelody(16, ocz[ox]);
      ox = incr(ox, 0, len(ocz));
    }
    if (count % 8 == 6) {
      for (i = 0; i < 16; ++i) {
        stepper(dx, dxmel, sx, i, dr);
        sx = incr(sx, 0, smx);
      }
    }
    smx = incr(smx, 3, 16);
    dr = dr + 20;
    if (dr > 270) {
      dr = 50;
    }
  }
}

