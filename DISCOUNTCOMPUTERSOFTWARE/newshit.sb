# dx fnc // WHHXc
let mblah_gen = gen()
{
  setup()
  {
    let key = 14;
    let notz = notes_in_chord(key);
    let nx = 0;
    let mel = riff(key);
    let dr = 350;

    let mx = 0;
    let mmx = 3;
  }
  run()
  {

    if (count % 2 == 0) {
      for (i = 0; i < 16; ++i) {
        stepper(dx, mel, mx, i, dr);
        mx = incr(mx, 0, mmx);
      }
      mmx = incr(mmx, 3, 16);
      dr = dr + 50;
      if (dr > 770){
        dr = 40;
      }
    }

    if (count % 8 == 0) {
      mel = riff(notz[nx]);
      nx = incr(nx, 0, len(notz));
    }
  }
}

