# per3 - baDUM
# per3 - default - bring up volume
let dooblah_gen = gen()
{
  setup()
  {
    let rnote = 14;
    let m = gamelody(16, rnote);
    let ix = 0;
    let imx = 3;
    let dr = 200;
  }
  run()
  {
    if (count % 8 > 4) {
      for (i = 0; i < 16; ++i) {
        stepper(per3, m, ix, i, dr);
        ix = incr(ix, 0, imx);
        dr = dr + 10;
      }
      imx = incr(imx, 4, 16);
      if (dr > 700) {
        dr = 200;
      }

      if (count % 8 == 0) {
        m = gamelody(16, rnote);
      }
    }
  }
}

