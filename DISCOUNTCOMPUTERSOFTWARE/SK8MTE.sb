# per1 - TINPAN // ggmarll // SNARE
let melliblah_gen = gen()
{
  setup()
  {
    let ntz = [38];
    let nx = 0;
    let mel = gamelody(16, ntz[nx]);
    let ix = 0;
    let imx = 3;
    let dr = 100;
  }

  run()
  {
    if (count % 8 < 4) {
      for (i = 0; i < 16; ++i) {
        stepper(per1, mel, ix, i, dr);
        ix = incr(ix, 0, imx);
      }
      imx = incr(imx, 3, 16);
      dr = dr + 10;
      if (dr > 450) {
        dr = 100;
      }

      if (count % 8 == 0) {
        mel = gamelody(16, ntz[nx]);
        nx = incr(nx, 0, len(ntz));
      }
    }
  }
}

# bpm 150
# let shm = loop(JUNALGOGZ/shitmATz.wav); set shm:len 2
let wablah_gen = gen()
{
  setup()
  {
    let beat = rand_beat(16, 0, 4);
  }
  run()
  {
    set shm:poffset 0;
    set fnk:poffset 0;
    set js:poffset 0;
    if (count % 2 == 0) {
      for (i = 0; i < 16; ++i) {
        set shm:pidx beat[i] at=i*pp;
        set fnk:pidx beat[i] at = i *pp;
      }
    }
    if (count % 4 == 3) {
      beat = rand_beat(16, 0, 4);
      set shm:stutter 1;
    }

    if (count % 3 == 0) {
      set fnk:stutter 1;
      set js:scramble 1;
    }
  }
}

