# oh - FRAK; load_preset(oh, "FRAK")
let doo3blah_gen = gen()
{
  setup()
  {
    let rnote = 14;
    let m = gamelody(16, rnote);
    let ix = 0;
    let imx = 3;
    let dr = 100;
  }
  run()
  {
    for (i = 0; i < 16; ++i) {
      stepper(oh, rotate(m, ix), ix, i, dr);
      ix = incr(ix, 0, imx);
    }
    imx = incr(imx, 3, 16);
    set fnk:poffset 0;
    if (count % 7 < 4) {
      #set fnk:pidx (count % 16);
    }

    if (count % 2 == 0) {
      set fnk:scramble 1;
    }
    if (count % 8 == 0) {
      m = gamelody(16, rnote);
      set fnk:stutter 1;
    }
  }
}
