# p1 < osc 8 "0 15"  "set skc:poffset %"
let bdrop = sample(bombz/BSQ_BASSDROP.wav);
let skcblah_gen = gen()
{
  setup()
  {
    let lenz = [15, 14, 12, 16];
    let lx = 0;
  }
  run()
  {
    if (count % 8 == 7) {
      set skc:reverse 1;
    }
    if (count % 16 == 15) {
      set skc:scramble 1;
    }
    if (count % 16 == 14) {
      set skc:plooplen lenz[lx];
      lx = incr(lx, 0, len(lenz));
    }
    if (count % 16 == 0) {
      note_on(bdrop, 1, dur = 1000);
    }
  }
}

