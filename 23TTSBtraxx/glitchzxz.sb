let hh = sample(ch/hh13.aif);

# YESS! dx = ZKZZ and waz = RBTRR
# dx = drum() # WALE or Srqttx ? PIPEBLING // ZKZZ
let mel = [23, 0, 23, 17, 0, 14, 0, 0, 0, 13, 0, 0, 7, 24, 24, 0];
let dhhblah_gen = gen()
{
  setup()
  {
    let mx = 0;
    let mmax = 3;
    let durz = [60, 90, 100, 150, 200, 250, 300];
    let drx = 0;
  }
  run()
  {
    if (count % 2 == 1) {
      for (i = 0; i < 16; ++i) {
        stepper(dx, mel, mx, i, durz[drx]);
        drx = incr(drx, 0, len(durz));
        mx = incr(mx, 0, mmax);
      }
      mmax = incr(mmax, 3, 16);
    }
  }
}

# HIGHWR or RBTRR ?
let wahblah_gen = gen()
{
  setup()
  {
    let mel = gamelody(7, 23, 16);
    let mx = 0;
    let mmax = 3;
  }
  run()
  {
    for (i = 0; i < 16; ++i) {
      stepper(waz, mel, mx, i, 300);
      mx = incr(mx, 0, mmax);
    }
    mmax = incr(mmax, 3, 16);
    if (count % 10 == 0) {
      mel = gamelody(7, 23, 16);
    }
  }
}

