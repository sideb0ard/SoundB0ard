let pblah_gen = gen()
{
  setup()
  {
    let sz = [2, 4, 8];
    let sx = 0;
    let sz2 = [3, 5, 7, 9];
    let sx2 = 0;
  }
  run()
  {
    let bt1 = bjork(sz[sx], 16);
    sx = incr(sx, 0, len(sz));
    let bt2 = bjork(sz2[sx2], 16);
    sx2 = incr(sx2, 0, len(sz2));

    for (i = 0; i < 16; ++i) {
      if (bt1[i] == 1) {
        note_on_at(perxz1[pr1x], 1, i * pp);
        pr1x = incr(pr1x, 0, len(perxz1));
      }
      if (bt2[i] == 1) {
        note_on_at(perxz2[pr2x], 1, i * pp);
        pr2x = incr(pr2x, 0, len(perxz2));
      }
    }

  }
}


