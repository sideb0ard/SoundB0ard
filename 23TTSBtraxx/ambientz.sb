let bd = sample(bd/808kick.aif);
let ch = sample(ch/hatTail.aiff);
let sn = sample(noises/skateWheelDoublehit.aiff);

# JUSTIFY STILL
let bdlah_gen = gen()
{
  setup()
  {
    let t = 434555;
    let pat  = bits(((t/4)>>(t/4))>>(t>>(t/8))|t>>2);
  }
  run()
  {
    note_on_at(bd, 1, 0);
    send(0, ch, 0);
    if (count % 4 == 0) {
      #set tel:stutter 1;
      send(0, ch, 0.4);
      cbeat(sn);
    }
    if (count % 3 == 0) {
      #set tel:scramble 1;
      send(0, ch, 0.2);
    }
    if (count % 7 == 0) {
      #set tel:reverse 1;
      pat  = bits(((t/4)>>(t/4))>>(t>>(t/8))|t>>2);
      ++t;
    }

    if (count % 2 == 0) {
      for (i = 0; i < 16; ++i) {
        if (pat[i] == 1) {
          note_on_at(ch, 1, i * pp * 2, dur = 1000);
        }
      }

    }
  }
}

