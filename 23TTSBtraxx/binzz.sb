let ok = sample(voices/ok.wav);
let notez = [47, 48];
let cnt = 7;
let the_mel = combinor(bjork(cnt, 16), notez);
let dabblah = gen()
{
  setup()
  {
    let nx = 0;
    let d = 150;
  }
  run()
  {
    if (count % 8 < 6) {
      for (i = 0; i < 16; ++i) {
        let v = 100 + rand(27);
        let off = 0;
        if (count % 4 == 0) {
          v = 127;
        }
        if (count % 2 == 1) {
          off = 48;
        }
        if (the_mel[i] > 0 ) {
          note_on_at(cp, the_mel[i], i*pp + off, vel = v, dur = d);
        }
      }
      d = d + 50;
      if (d > 550) {
        d = 150;
      }
    }
    if (count % 4 == 0) {
      the_mel = combinor(bjork(cnt, 16), notez);
      cnt = incr(cnt, 3, 11);
      note_on(ok, 1, dur = d + 100);
    }
  }
}

