let bin2_gen = gen()
{
  setup()
  {
    let t = 30506;
    let drz = [100, 300, 500, 700, 1000];
    let kx = 0;
    let drx = 0;
  }
  run()
  {
    let p = bits((t*t)/(t>>8&t));
    ++t;
    if (count % 4 < 3) {
      for (i = 0; i < 16; ++i) {
        let offset = rand(30);
        if (i % 2 == 0) {
          offset = 0;
        }
        if (p[i] == 1) {
          note_on_at(kt2[kx], 1, i*pp + offset, dur = drz[drx], vel = 90 + rand(37));
          if (count % 8 < 5) {
            kx = incr(kx, 0, len(kt2));
          }
        }
      }
      drx = incr(drx, 0 ,len(drz));
    }

  }
}

