let bin_gen = gen()
{
  setup()
  {
    let t = 153567;
    let ptz = [0.8, 1, 1.2, 1.5, 2];
    let px = 0;
    let bx = 0;
  }
  run()
  {
    if (count % 8 < 7) {
      ((t/4)>>(t/4))>>(t>>(t/8))|t>>2;
      ++t;
      #print(bits(t));
      perky(bits(t), kt);
      set kt[bx]:pitch ptz[px];
      bx = incr(bx, 0, len(kt));
      px = incr(px, 0, len(ptz));
    }
  }
}

