let syblah_gen = gen()
{
  setup()
  {
    let notz = notes_in_chord(key, 1);
    let bjz = [1, 3, 2, 5, 4, 7];
    let bx = 1;
    let drrr = 150;
    let bt = bjork(bjz[bx - 1], 8) + bjork(bjz[bx], 8);
    let lx = 0;
    let lmx = 3;
  }
  run()
  {
    if (count % 8 == 0) {
      bt = bjork(bjz[bx - 1], 8) + bjork(bjz[bx], 8);
    }
    bx = incr(bx, 1, len(bjz));
    let mel = combinor(bt, notz);

    for (i = 0; i < 16; ++i) {
      stepper(dx, mel, lx, i, drrr);
      lx = incr(lx, 0, lmx);
    }
    lmx = incr(lmx, 2, 16);

    #play_array(dx, mel, dur = drrr);
    drrr = drrr + 20;
    if (drrr > 400) {
      drrr = 150;
    }
  }
}



