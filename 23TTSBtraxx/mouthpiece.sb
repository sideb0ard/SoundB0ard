# let mouth = loop(voices/mouthpiece.wav); set mouth:len 4

let mouthblah_gen = gen()
{
  setup()
  {
    let offsz = 1;
  }

  run()
  {
    if (count % 8 < 4 ) {
      set mouth:stutter 1;
      set mouth:on 1;
      if (count % 4 == 0) {
        set mouth:scramble 1;
      }
      if (count % 4 == 1) {
        play_array(mouth, rand_beat());
      }
      if (count % 4 == 2) {
        set mouth:plooplen offsz;
        offsz = incr(offsz, 1, 16);
      }
      if (count % 4 == 3) {
        if (rand(100) > 80) {
          set mouth:plooplen 16;
        }
      }
    } else {
      set mouth:off 1;
      play_array(mouth, rand_beat());
    }
  }
}

