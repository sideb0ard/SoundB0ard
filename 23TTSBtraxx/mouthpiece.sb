let ste3blah_gen = gen()
{
  setup()
  {
    let mlenz = [7, 9, 8, 4];
    let mx = 0;
    let mel = garmelody(mlenz[mx], chrz[chx], 16);
    let mel2 = garmelody(mlenz[mx], chrz[chx], 16);

    let msk1x = 0;
    let msk2x = 0;

    let lx = 0;
    let mlx = 3;

    let drz = [50, 100, 150, 250, 500];
    let drx = 0;

  }
  run()
  {

    if (count % 2 == 0) {
      for (i = 0; i < 16; ++i) {
        stepper(dx2, mel, lx, i, drz[drx]);
        lx = incr(lx, 0, mlx);
        drx = incr(drx, 0, len(drz));
