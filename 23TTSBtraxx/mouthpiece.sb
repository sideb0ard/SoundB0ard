      mlx = incr(mlx, 3, len(mel));

    }
    if (count % 12 == 0) {
      mel2 = garmelody(mlenz[mx], chrz[chx], 16);
      mx = incr(mx, 0, len(mlenz));
    }
    if (count % 13 == 0) {
      mel = garmelody(mlenz[mx], chrz[chx], 16);
      mx = incr(mx, 0, len(mlenz));
    }
  }
}

