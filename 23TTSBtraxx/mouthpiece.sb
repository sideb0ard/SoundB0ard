let msk = "00f0";
let key = 22;
let steblah_gen = gen()
{
  setup()
  {
    let mlenz = [6, 4, 7, 9];
    let mx = 0;
    let mel = gamelody(mlenz[mx], key, 16);
    let mel2 = gamelody(mlenz[mx], key, 16);
    let msk1x = 0;
    let msk2x = 0;
  }
  run()
  {
    if (count % 4 == 0) {
      let mymel = mask(mel, rotate(msk, msk1x));
      msk1x = incr(msk1x, 0, 4);
      for (i = 0; i < 16; ++i) {
        if (mymel[i] > 0) {
          note_on_at(dx, mymel[i], i * pp * 2);
        }
      }
    }
    if (count % 4 == 2) {
      let mymel = mask(mel2, rotate(msk, msk2x));
      msk2x = incr(msk2x, 0, 4);
      for (i = 0; i < 16; ++i) {
        if (mymel[i] > 0) {
          note_on_at(dx, mymel[i], i * pp + pp);
        }
      }
    }
    if (count % 12 == 0) {
      mel2 = gamelody(mlenz[mx], key, 16);
      mx = incr(mx, 0, len(mlenz));
    }
    if (count % 13 == 0) {
      mel = gamelody(mlenz[mx], key, 16);
      mx = incr(mx, 0, len(mlenz));
    }
  }
}

#  let bq = loop(bombz/BSQ_M14.wav); set bq:len 2; add_fx(bq, "distort");
let bqlah_gen = gen()
{
  setup()
  {
    let bjz = [5, 7, 11];
    let bx = 0;
  }
  run()
  {
    if (count % 8 == 6) {
      set bq:off 1 at = bjz[bx] * pp;
    }
    set bq:on 1;
    if (count % 8 == 7) {
      set bq:stutter 1;
    }
    let bt = bjork(bjz[bx], 16);
    if (count % 2 == 0) {
      play_array(bd, bt, dur = 500);
    }
    if (count % 4 == 3) {
      set bq:scramble 1;
      bx = incr(bx, 0, len(bjz));
      # play_array(dx, rotate(combinor(bt, [34, 52]), 2));
      play_array(dx, rotate(combinor(bt, chrz[chx]), 2));
    }
  }
}


