let cmbeat = fn(cp, midi_num)
{
  let probz = {4:90, 6:10, 12:90, 13:5, 15:10};
  let parray = map_to_array(probz, 16);
  for (i = 0; i < 16; ++i) {
    if (parray[i] > 0 && parray[i] > rand(100)) {
      let v = 127;
      if (i > 12) {
        v = 72;
      }
      let offset = 0;
      if (i > 0) {
        offset = rand(45);
      }
      note_on_at(cp, midi_num, i * pp - offset, vel = v);
    }
  }
}

