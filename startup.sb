  let twohit2 = [1, 0, 1, 0];

  let rhm = [];
  if (rand(100) < 70) {
    rhm = twohit;
  } else {
    rhm = onehit;
  }
  for (i = 0; i < 3; ++i) {
    let rnd = rand(100);
    if (rnd < 50) {
      if (rnd < 20) {
        rhm = rhm + onehit;
      } else {
        if (rnd < 35) {
          rhm = rhm + onehit2;
        } else {
          rhm = rhm + onehit3;
        }
      }
    } else {
      if (rnd < 80) {
        rhm = rhm + twohit;
      } else {
        rhm = rhm + twohit2;
      }
    }
  }
  return rhm;
}

let golden_ratio = 1.61803398875;

let golden_step = fn(last)
{
  return (last + golden_ratio) % 1.0;
}

let golden_seq = fn(num_beats)
{
  let circ_timez = [];
  let cur = rand(1);
  for (i = 0; i < num_beats; ++i) {
    push(circ_timez, cur);
    cur = golden_step(cur);
  }
  return sort(circ_timez);
}

let garmelody = fn(num_steps, notez, loop_len)
{
  let beat = golden_seq(num_steps);
  let melody = rand_array(loop_len, 0, 0);

  for (i = 0; i < len(beat); ++i) {
    let note = notez[rand(len(notez))];
    let time_val = floor(beat[i]*loop_len);
    melody[time_val] = note;
  }

  return melody;
}


