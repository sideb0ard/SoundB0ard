let melz1 = [0, 0, 15, 15, 13, 0, 13, 13, 0, 0, 0, 17, 0, 17, 15];
let melz2 = [13, 16, 16, 0, 0, 20, 0, 13, 0, 0, 28, 17, 0, 28, 15];
let melz = melz1;
# l0renzo4
let mmodxblah_gen = gen()
{
  setup()
  {
    let mx = 0;
    let pp = PPBAR / melz;
  }
  run()
  {
    if (count % 16 == 0) {
      melz = melz1;
    }
    if (count % 21 == 20) {
      melz = melz2;
    }

    if (count % 8 < 7) {
      for (i = 0; i < len(melz); ++i) {
        if (melz[i] > 0) {
          note_on_at(dx, melz[i], i * pp);
        } else {
          set abto:stutter 1;
          note_on_at(abto, melz[i], i * pp);
        }
      }
    } else {
      set abto:on 1;
    }

    if (count % 3 == 0) {
      melz = rotate(melz, 3);
      set xb:stutter 1;
    }
    if (count % 4 == 0) {
      melz = reverse(melz);
      set xb:scramble 1;
    }

  }
}

