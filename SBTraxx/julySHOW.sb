let vblah_gen = gen()
{
  setup()
  {
    let blen = 16;
    let beat = mask(rand_array(blen, 0, 7), "f0f0");
    let mpp = 3840 / blen;
    #let hpp = pp / 3;
  }
  run()
  {
    if (count % 3 < 2 ){
      let offset = 0;
      for (i = 0; i < len(beat); ++i) {
        if (i % 2 == 0) {
          offset = 20;
        }
        if (beat[i] < len(sampz)) {
          let on_at = i * mpp + offset;
          note_on_at(sampz[sx], 1, on_at);
          sx = incr(sx, 0, len(sampz));
        }
      }
    }
    if (count % 4 ==0) {
      beat = mask(rand_array(blen, 0, 7), "f0f0");
    }
  }
}

