let blah_gen = gen()
{
  setup()
  {
    let pitz = [1.5, 0.8];
    let px = 0;
  }
  run()
  {
    if (count % 16 == 15) {
      let b = rand_array(16, 0, 1);
      for (i = 0; i < 16; ++i) {
        if (b[i] == 1) {
          note_on_at(cmon, 1, i *pp);
        } else {
          note_on_at(rap, 1, i *pp);
        }
      }
    } else {
      set cmon:on 1;
      set rap:scramble 1;

    }

    if (count % 4 == 3) {
      set rap:stutter 1;
      set cmon:scramble 1;
      set rap:pitch pitz[px];
      px = incr(px, 0, len(pitz));
    }
    if (count % 8 == 7) {
      set cmon:stutter 1;
      set rap:scramble 1;
      set rap:on 1;
    }
  }
}

