let dxdblah_gen = gen()
{
  setup()
  {
    let notz = [64, 63];
    let d = 40;
  }

  run()
  {
    if (count % 7 == 0)  {
      let offset = 0;
      for (i = 0; i < 16; ++i) {
        if (i % 2 == 0) {
          offset = 10;
        }
        note_on_at(dx, 64, i * pp + offset, dur = d, vel = 90);
      }
      set medih:scramble 1;
      set medih:on 1;
    } else {
      d = d + 10;
      if (d > 100) {
        d = 40;
      }
      let beat = rand_array(16, 0, 1);
      let offset = 0;
      set medih:stutter 1;
      for (i = 0; i < 16; ++i) {
        if (i % 2 == 0) {
          offset = 10;
        }
        if (beat[i] == 1) {
          note_on_at(medih, 64, i * pp + offset);
        }
      }
      if (count % 3 == 0) {
        let beat = rand_array(16, 0, 1);
        let mel = combinor(beat, notz);
        play_array(dx, mel, dur = d, vel = 90);
      }
    }
  }
}


