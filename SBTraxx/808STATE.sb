let dxstabblah_gen = comp()
{
  setup()
  {
    let rhmz = [5];
    let rx = 0;
    # let o2ratz = [4, 7, 10, 1, 0.7];
    let o2ratz = [0.7, 4, 7];
    let o2x = 0;

    let durz = [50, 100, 150, 200, 250];
    let drx = 0;
  }
  run()
  {
    if (count % 18 < 16) {
      let beat = bjork(5, 16);
      if (count % 7 == 0) {
        beat = bjork(3, 16);
      }
      if (count % 13 == 0) {
        beat = bjork(7, 16);
      }
      for (let i = 0; i < 16; i++) {
        let offs = 20;
        if (i % 2 == 0) {
