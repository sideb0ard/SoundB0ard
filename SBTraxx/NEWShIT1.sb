
# progression  I-V-vi-IV
# [I] - [V] - [I] [V] [vi IV] [IV vi] [vi] [I V] [I V vi]

let key = NULL:
let keymod = NULL;
let notez = NULL;
let I = NULL;
let V = NULL;
let vi = NULL;
let IV = NULL;
let chordz = NULL;
let cx =NULL;
let bd = NULL;
let rap = NULL;


let init = fn()
{
  key = 45;
  keymod = 1;
  notez = notes_in_key(key, keymod);
  I = notes_in_chord(notez[0], key, 0, 1);
  V = notes_in_chord(notez[4], key, 0, 1);
  vi = notes_in_chord(notez[5], key, 0, 1);
  IV = notes_in_chord(notez[3], key, 0, 1);
  chordz = [I, I, I, I, V, I, vi, IV];
  cx = 0;

  bd = sample(bd/gaborKick.aiff);
  rap = sample(voices/RAPMatrix.wav);
  bpm 200;
  load_preset(dx3, "WNARR"); vol dx3 0.6;
  load_preset(dx2, "LOWES"); vol dx2 1;
  load_preset(dx, "LOWES"); vol dx1 ;
  set rap:pitch 0.8;
}

