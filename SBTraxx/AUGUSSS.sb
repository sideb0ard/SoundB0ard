let loopblah_gen = gen()
{
  setup()
  {
    let beat = rand_array(16, 0, 16);
    let durz = [10, 20, 50, 100, 250, 350];
    let drx = 0;
  }
  run()
  {
    if (count % 4 == 0) {
      beat = rand_array(16, 0, 16);
    }
    if (count % 7 == 6) {
      drx = incr(drx, 0, len(durz));
    }
    for (let i = 0; i < 16; i++) {
      note_on_at(drumz, beat[i], i * pp, dur = durz[drx]);
    }
  }
}

