let hhblah_gen = gen()
{
  setup()
  {
    let hpat = [0, 0, 1, 1,  0, 0, 1, 0,  0, 0, 1, 1,  0, 1, 0, 1];
    let hpat2 = [0, 0, 0, 0,  1, 0, 1, 1,  0, 1, 1, 0,  0, 0, 1, 0];
    let sw = 70;
  }
  run()
  {
    let hatz = hpat;
    if (count % 4 == 3) {
      hatz = hpat2;
    }
    if (count % 8 == 7) {
      note_on_at(sb2, 4, 15 * pp, vel = 60 + rand(30));
    }
    for (let i = 0; i < 16; i++) {
      let offs = sw;
      if (i % 2 == 0) {
        offs = 0;
      }
      if (hatz[i] == 1) {
        note_on_at(sb2, 2, i * pp + offs, dur = 40, vel = 70 + rand(40));
      }
    }
  }
}
