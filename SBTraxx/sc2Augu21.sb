let todd_gen = gen()
{
  setup()
  {
    let percz = {1:che, 2:chewit, 3:youv, 4:whft, 5:blt, 6:teh};
    #let lenz = [16, 12, 24];
    let lenz = [16, 8];
    let lx = 0;
  }
  run()
  {
    if (count % 4 == 0) {
      let pbeat = rand_array(lenz[lx], 0, 6);
      let pp = 3840 / lenz[lx];

      for (i = 0; i < len(pbeat); ++i) {
        if (pbeat[i] > 0) {
          note_on_at(percz[pbeat[i]], 1, pp*i);
        }
      }

      lx = incr(lx, 0, len(lenz));
    }
  }
}

