let maw_gen = gen()
{
  setup()
  {
  }
  run()
  {
    if (count % 2 == 0) {
      set maw:plooplen 16;
      set maw:pitch 1;
    }
    if (count % 4 == 3) {
      set maw:scramble 1;
    }
    if (count % 12 == 11) {
      set maw:stutter 1;
    }
    if (count % 16 == 10) {
      set maw:plooplen 2;
      set maw:pitch 2;
    }
  }
}

let hh = sample(ch/CasioMT70ClosedHihat.aif);

let hh1 = sample(ch/LOUhat.aiff);
let hh2 = sample(ch/hh8.aif);
let hh3 = sample(ch/timabHat2.aiff);

let hhz = [hh1, hh2, hh3];
let hhx = 0;

let hhgen = gen()
{
  setup()
  {
    let px = 2;
  }
  run()
  {

    if (count % 4 < 3) {
      let pat = [];
      for (i = 0; i < 4; ++i) {
        if (i == px) {
          pat = pat + rand_array(4, 0, 1);
        } else {
          pat = pat + rand_array(4, 0, 0);
        }
      }
      play_array(hhz[hhx], pat);
      px = incr(px, 0, 4);
      hhx = incr(hhx, 0, len(hhz));
    }

  }
}


