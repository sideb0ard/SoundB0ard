let momel = [0, 15, 0, 15, 0, 0, 17, 0, 0, 18, 0, 0, 0, 15, 0, 0];
let dr = 50;
let moblah_gen = gen()
{
  setup()
  {
    let mlx = 0;
    let mxx = 4;
  }
  run()
  {
    if (count % 8 == 7) {
      play_array(mo, riff(23), dur = dr);
    }
    else {
      for (i = 0; i < 16; ++i) {
        stepper(mo, momel, mlx, i, dr);
        mlx = incr(mlx, 0, mxx);
      }
      mxx = incr(mxx, 3, 16);
      dr = dr + 10;
      if (dr > 150) {
        dr = 50;
      }
    }
  }
}

let dblah_gen = gen()
{
  setup()
  {
    let mlx = 0;
    let mxx = 4;
  }
  run()
  {
    if (count % 8 == 3) {
      for (i = 0; i < 16; ++i) {
        stepper(dx, up(momel, 12), mlx, i, dr);
        if (rand(100) < 70) {
          mlx = incr(mlx, 0, mxx);
        }
      }
      if (rand(100) < 70) {
        mxx = incr(mxx, 3, 16);
      }
    }
  }
}

